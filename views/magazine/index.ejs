<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Magazines</title>
    <style>
        .magazine-card {
            border: 1px solid #ccc;
            margin: 10px;
            padding: 15px;
            width: 300px;
            display: inline-block;
            vertical-align: top;
        }

        .magazine-card img {
            max-width: 100%;
            height: auto;
            margin-bottom: 10px;
        }

        .like-button {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 8px 15px;
            cursor: pointer;
            border-radius: 5px;
        }

        .liked {
            background-color: #28a745;
        }
    </style>
</head>
<body>
    <h1>Our Magazines</h1>

    <% if (magazines && magazines.length > 0) { %>
        <% magazines.forEach(magazine => { %>
            <div class="magazine-card" data-content-url="<%= magazine.content_url %>">
                <h3><%= magazine.title %></h3>
                <p><%= magazine.description %></p>
                <% if (magazine.image_url) { %>
                    <img src="<%= magazine.image_url %>" alt="<%= magazine.title %>">
                <% } %>
                <button class="like-button">Like</button>
            </div>
        <% }); %>
    <% } else { %>
        <p>No magazines available.</p>
    <% } %>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const magazineCards = document.querySelectorAll('.magazine-card');

            magazineCards.forEach(card => {
                const likeButton = card.querySelector('.like-button');
                const contentUrl = card.dataset.contentUrl;

                likeButton.addEventListener('click', () => {
                    likeButton.classList.add('liked');
                    likeButton.textContent = 'Liked!';
                    // After a short delay, open the content URL
                    setTimeout(() => {
                        window.open(contentUrl, '_blank');
                    }, 500); // Adjust the delay as needed
                });
            });
        });
    </script>
</body>
</html>