<!DOCTYPE html>
<html lang="en">
<head>
    <title>My Questions</title>
    <link rel="stylesheet" href="/views/my_questions.css">
</head>
<body>
    <h2>My Questions</h2>
    <ul>
        <% questions.forEach(q => { %>
            <li>
                <a href="/questions/<%= q.id %>"><%= q.title %></a>
            </li>
        <% }) %>
    </ul>

    <h3>Post a New Question</h3>
    <form action="/questions/new" method="POST">
        <input type="text" name="title" placeholder="Title" required>
        <textarea name="description" placeholder="Description" required></textarea>
        <button type="submit">Submit</button>
    </form>

    <a href="/questions">Back to All Questions</a>
</body>
</html>
